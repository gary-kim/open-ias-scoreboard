{
  "name": "open-ias-scoreboard",
  "version": "0.2.3",
  "private": true,
  "description": "Open IAS Scoreboard is an Electron application to use for putting scoreboards on IASAS event livestreams.",
  "main": "src/index.js",
  "scripts": {
    "prestart": "npx lessc --math=parens-division less/app.less css/app.css",
    "premake": "mkdir -p oss-attribution && yarn licenses --silent generate-disclaimer > oss-attribution/attributions.txt && npx lessc --math=parens-division less/app.less css/app.css",
    "attributions": "mkdir -p oss-attribution && yarn licenses --silent generate-disclaimer > oss-attribution/attributions.txt",
    "docs": "jsdoc -P ./package.json -r ./js ./src",
    "test": "npx eslint --ext .js . && npx mocha",
    "start": "npx electron .",
    "make": "npx electron-builder build --publish never"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gary-kim/iasas-scoreboard.git"
  },
  "author": "Gary Kim <gary@garykim.dev>",
  "license": "AGPL-3.0",
  "copyright": "Copyright © 2019 Gary Kim <gary@garykim.dev>",
  "bugs": {
    "url": "https://github.com/gary-kim/iasas-scoreboard/issues"
  },
  "homepage": "https://openias.garykim.dev/",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "get-in-range": "^0.2.4",
    "mousetrap": "^1.6.3"
  },
  "devDependencies": {
    "acorn": "^6.1.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron": "^4.2.4",
    "electron-builder": "^20.43.0",
    "electron-builder-squirrel-windows": "^20.44.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jsdoc": "^4.8.4",
    "eslint-plugin-mocha": "^5.3.0",
    "less": "^3.9.0",
    "mocha": "^6.1.4",
    "spectron": "^5.0.0"
  },
  "build": {
    "appId": "dev.garykim.openias.scoreboard",
    "productName": "Open IAS Scoreboard",
    "copyright": "Copyright © 2019 Gary Kim <gary@garykim.dev>",
    "files": [
      "!test/**",
      "!less/**"
    ],
    "publish": null,
    "linux": {
      "category": "utility",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "appCopyright": "©2019 Gary Kim <gary@garykim.dev>"
      },
      "electronWinstallerConfig": {
        "name": "open-ias-scoreboard",
        "authors": "Gary Kim",
        "title": "Open IAS Scoreboard"
      },
      "electronInstallerDebian": {
        "name": "open-ias-scoreboard",
        "maintainer": "Gary Kim",
        "productName": "Open IAS Scoreboard",
        "productDescription": "Scoreboard is an Electron application to use for putting scoreboards on IASAS event livestreams."
      },
      "electronInstallerRedhat": {
        "authors": "Gary Kim"
      },
      "github_repository": {
        "owner": "Gary Kim",
        "name": "open-ias-scoreboard"
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "openiasscoreboard"
      }
    }
  }
}
